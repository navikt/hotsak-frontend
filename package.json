{
  "name": "hotsak-frontend",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.30.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1"
  },
  "scripts": {
    "build:client": "pnpm --prefix client run build",
    "build:server": "go build -C server ./...",
    "build": "npm-run-all build:*",
    "test:client": "pnpm --prefix client run test:ci",
    "test:server": "go test -C server ./...",
    "test": "npm-run-all test:*",
    "dev": "pnpm --prefix client run dev",
    "dev:server": "<read .env> && go run -C ./server .",
    "cypress:open": "pnpm --prefix client run cypress:open",
    "cypress:run": "pnpm --prefix client run cypress:run",
    "prepare": "husky || true",
    "lint:client": "pnpm --prefix client run lint",
    "lint:server": "go vet -C server ./...",
    "lint": "npm-run-all lint:*"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
